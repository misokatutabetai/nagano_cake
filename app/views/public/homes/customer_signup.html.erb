<h1>public/homes#<%= action_name %></h1>

<div class="d-flex align-items-center p-3">
  <span class="page-title">新規登録</span>
</div>

<div class="col-8 mx-auto">
  <%= form_with do |f| %>
    <div class="field mt-3">
      <%= "氏名" %>
      <div class="field col-8 p-0">
        <%= f.label :first_name, "（姓）", class: "col-2 px-0" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: :true, class: "col-4 px-1" %>
        <%= f.label :last_name, "（名）", class: "col-2 px-0" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-4 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= "フリガナ" %>
      <div class="field col-8 p-0">
        <%= f.label :first_furigana, "（セイ）", class: "col-2 px-0" %>
        <%= f.text_field :first_furigana, autofocus: true, class: "col-4 px-1" %>
        <%= f.label :last_furigana, "（メイ）", class: "col-2 px-0" %>
        <%= f.text_field :last_furigana, autofocus: true, class: "col-4 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :email, "メールアドレス" %>
      <div class="col-8 px-0">
        <%= f.text_field :email, autocomplete: :true, autofocus: true, class: "col-5 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      <div class="col-8 px-0">
        <%= f.text_field :postal_code, autocomplete: :true, autofocus: true, class: "col-5 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autocomplete: :true, autofocus: true, class: "col-8 px-1" %>
    </div>
    <div class="field mt-2">
      <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
      <div class="col-8 px-0">
        <%= f.text_field :telephone_number, autofocus: true, class: "col-5 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :password, "パスワード（6文字以上）" %>
      <div class="col-8 px-0">
        <%= f.text_field :password, autofocus: true, class: "col-5 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :password_check, "パスワード（確認用）" %>
      <div class="col-8 px-0">
        <%= f.text_field :password_check, autofocus: true, class: "col-5 px-1" %>
      </div>
    </div>

    <%# ja.ymlを利用してボタンの表示を分岐させる %>

    <div class="actions mt-3">
      <%= f.submit "Buttom", class: 'btn btn-sm btn-success' %>
    </div>
  <% end %>
</div>

<div class="d-flex align-items-center p-3 mt-5">
  <span class="page-title">既に登録済みの方</span>
</div>
<p><%= link_to "こちら", root_path, class: "px-4" %>からログインしてください。</p>

<p>Find me in app/views/public/homes/<%= action_name %>.html.erb</p>