<h1>public/homes#<%= action_name %></h1>

<div class="d-flex align-items-center p-3">
  <span class="page-title">注文履歴詳細</span>
</div>

<div class="col row mx-0">
  <div class="col-7 p-0">
    <div><strong>注文情報</strong></div>
    <table class="table mt-2">
      <tbody>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
        </tr>
        <tr>
          <td>発送先</td>
          <td>
            <div>〒<%= @order.postal_code.slice(0..2) %>-<%= @order.postal_code.slice(3..6) %></div>
            <div><%= @order.address %></div>
            <div><%= @order.name %></div>
          </td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-4 ml-auto mb-auto p-0">
    <div><strong>請求金額</strong></div>
    <div class="mt-2 bg-white py-2" %>
      <div class="row mx-0">
        <div class="col"><strong>商品合計</strong></div>
        <div class="col text-right"><%= @order.total_payment.to_s(:delimited) %>円</div>
      </div>
      <div class="row mt-2 mx-0">
        <div class="col"><strong>送料</strong></div>
        <div class="col text-right"><%= @order.shipping_cost.to_s(:delimited) %>円</div>
      </div>
      <div class="row mt-2 border border-top border-secondary mx-0">
      </div>
      <div class="row mt-2 mx-0">
        <div class="col"><strong class="text-danger">請求金額合計</strong></div>
        <div class="col text-right"><strong><%= (@order.total_payment + @order.shipping_cost).to_s(:delimited) %>円</strong></div>
      </div>
    </div>
  </div>
</div>

<div class="col">
  <div><strong>注文内容</strong></div>
  <table class="table mt-2">
    <thed>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thed>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td class="d-flex align-items-center">
            <div class="bg-light d-flex justify-content-center" style="height:60px; width:80px">
              <% if order_detail.item.image.attached? %>
                <%= image_tag order_detail.item.image, height: "100%" %>
              <% else %>
                <%= image_tag 'no_image', width: "100%" %>
              <% end %>
            </div>
            <span class="ml-2"><%= order_detail.item.name %></span>
          </td>
          <td><%= order_detail.item.price.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.price.to_s(:delimited) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<p>Find me in app/views/public/homes/<%= action_name %>.html.erb</p>