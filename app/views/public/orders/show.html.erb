<div class="d-flex align-items-center p-3">
  <span class="page-title">注文履歴詳細</span>
</div>

<div class="col row mx-0">
  <div class="col-7 p-0">
    <div><strong>注文情報</strong></div>
    <table class="table mt-2">
      <tbody>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
        </tr>
        <tr>
          <td>発送先</td>
          <td>
            <div><%= @order.postal_display %></div>
            <div><%= @order.address %></div>
            <div><%= @order.name %></div>
          </td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-4 ml-auto mb-auto p-0">
    <div><strong>請求金額</strong></div>
    <div class="mt-2 bg-white py-2" %>
      <div class="row mx-0">
        <div class="col"><strong>商品合計</strong></div>
        <div class="col text-right"><%= @order.subtotal_total.to_s(:delimited) %>円</div>
      </div>
      <div class="row mt-2 mx-0">
        <div class="col"><strong>送料</strong></div>
        <div class="col text-right"><%= @order.shipping_cost.to_s(:delimited) %>円</div>
      </div>
      <div class="row mt-2 border border-top border-secondary mx-0">
      </div>
      <div class="row mt-2 mx-0">
        <div class="col"><strong class="text-danger">請求金額合計</strong></div>
        <div class="col text-right"><strong><%= @order.total_payment.to_s(:delimited) %>円</strong></div>
      </div>
    </div>
  </div>
</div>

<div class="col">
  <div><strong>注文内容</strong></div>
  <table class="table mt-2">
    <thed>
      <tr>
        <th class="col-7">商品名</th>
        <th class="col-2 text-center">単価（税込）</th>
        <th class="col-1 text-center">数量</th>
        <th class="col-2 text-center">小計</th>
      </tr>
    </thed>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td class="d-flex align-items-center">
            <div class="bg-light d-flex justify-content-center border border-dark">
              <%= image_tag order_detail.item.get_image, size: '60x60' %>
            </div>
            <span class="ml-2"><%= order_detail.item.name %></span>
          </td>
          <td class="text-right"><%= order_detail.item.with_tax_price.to_s(:delimited) %>円</td>
          <td class="text-center"><%= order_detail.amount %></td>
          <td class="text-right"><%= order_detail.subtotal.to_s(:delimited) %>円</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

