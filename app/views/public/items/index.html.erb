<h1>public/homes#<%= action_name %></h1>

<div class="row mx-0">
  <div class="col-2 px-0">
    <%= render "public/homes/genre_list", genres: @genres %>
  </div>

  <div class="col-10 pr-0">
    <h3 class="mt-1">商品一覧（全<%= @items.count %>件）</h3>
    <div class="row mx-0">
      <% @items.each do |item| %>
        <div class="col-3 px-1 my-3">
          <div class="border border-dark bg-light">   
            <%= link_to item_path(item.id) do %>
              <div class="d-flex justify-content-center">
                <%= image_tag item.get_image, size: '145x120' %>
              </div>
              <div class="my-1 px-2"><%= item.name %></div>
              <div class="my-1 px-2"> 価格<%= item.price.to_s(:delimited) %>円</div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

<%
=begin %>
  <%# kaminariを用いてページャを実装する %>
  <div class="mt-5 d-flex justify-content-center"><%= paginate post_images, theme: 'bootstrap-5' %></div>
<%
=end %>

  </div>
</div>

<p>Find me in app/views/public/homes/<%= action_name %>.html.erb</p>