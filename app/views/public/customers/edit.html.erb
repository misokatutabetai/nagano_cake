<h1>public/homes#<%= action_name %></h1>

<div class="d-flex align-items-center p-3">
  <span class="page-title">会員情報編集</span>
</div>

<div class="col-8 mx-auto" %>
  <%= form_with model: @customer, url: edit_customer_path, method: :get, loacl:true do |f| %>
    <div class="field mt-3">
      <%= "氏名" %>
      <div class="col-8 p-0">
        <%= f.text_field :last_name, autofocus: true, autocomplete: :true, class: "col-4 px-1" %>
        <%= f.text_field :first_name, class: "col-4 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= "フリガナ" %>
      <div class="col-8 p-0">
        <%= f.text_field :last_name_kana, class: "col-4 px-1" %>
        <%= f.text_field :first_name_kana, class: "col-4 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      <div class="col-8 px-0">
        <%= f.text_field :postal_code, autocomplete: :true, class: "col-5 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autocomplete: :true, class: "col-8 px-1" %>
    </div>
    <div class="field mt-2">
      <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
      <div class="col-8 px-0">
        <%= f.text_field :telephone_number, class: "col-5 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :email, "メールアドレス" %>
      <div class="col-8 px-0">
        <%= f.text_field :email, autocomplete: :true, class: "col-5 px-1" %>
      </div>
    </div>

    <div class="d-flex justify-content-around mt-5" %>
      <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
      <%= link_to "退会する", unsubcribe_path, class: "btn btn-sm btn-danger" %>
    </div>
  <% end %>
</div>

<p>Find me in app/views/public/homes/<%= action_name %>.html.erb</p>