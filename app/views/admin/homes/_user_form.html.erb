<%= form_with do |f| %>
  <div class="field mt-5">
    <div>会員ID</div>
    <div class="col-8 p-0">12345</div>
  </div>
  <div class="field mt-2">
    <div>氏名</div>
    <div class="d-flex col-8 p-0">
      <%= f.text_field :first_name, autofocus: true, autocomplete: true, class: "col-5 px-1" %>
      <%= f.text_field :last_name, autofocus: true, class: "col-5 px-1 ml-1" %>
    </div>
  </div>
  <div class="field mt-2">
    <div>フリガナ</div>
    <div class="d-flex col-8 p-0">
      <%= f.text_field :first_furigana, autofocus: true, class: "col-5 px-1" %>
      <%= f.text_field :last_furigana, autofocus: true, class: "col-5 px-1 ml-1" %>
    </div>
  </div>
  <div class="field mt-2">
    <%= f.label :postal_code, "郵便番号" %>
    <div class="col-8 px-0">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: true, class: "col-5 px-1" %>
    </div>
  </div>
  <div class="field mt-2">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: true, class: "col-8 px-1" %>
  </div>
  <div class="field mt-2">
    <%= f.label :telephone_number, "電話番号" %>
    <div class="col-8 px-0">
      <%= f.text_field :telephone_number, autofocus: true, class: "col-5 px-1" %>
    </div>
  </div>
  <div class="field mt-2">
    <%= f.label :email, "メールアドレス" %>
    <div class="col-8 px-0">
      <%= f.text_field :email, autofocus: true, autocomplete: true, class: "col-10 px-1" %>
    </div>
  </div>
  <div class="field mt-2">
    <div>会員ステータス</div>

    <%# ユーザー情報から今のステータスを選択済みにする %>

    <div class="row col-8 p-0">
      <div class="col p-0">
        <%= f.radio_button :status, :run %>
        <%= f.label :status, "有効", value: :run, class: "mr-3" %>
        <%= f.radio_button :status, :stop %>
        <%= f.label :status, "退会", value: :stop %>
      </div>
    </div>
  </div>

  <%# ja.ymlを利用してボタンの表示を分岐させる %>

  <div class="actions mt-5">
    <%= f.submit "Buttom", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>