<h1>admin/homes#<%= action_name %></h1>

<div class="d-flex align-items-center p-3">
  <span class="page-title">管理者ログイン</span>
</div>

<div class="col-md-8 mx-auto">
  <%= form_with do |f| %>
    <div class="field mt-5">
      <%= f.label :email, "メールアドレス" %>
      <div class="col-8 px-0">
        <%= f.text_field :email, autofocus: true, autocomplete: true, class: "col-12 px-1" %>
      </div>
    </div>
    <div class="field mt-2">
      <%= f.label :password, "パスワード" %>
      <div class="col-8 px-0">
        <%= f.email_field :password, autofocus: true, class: "col-12 px-1" %>
      </div>
    </div>

    <div class="actions mt-5">
      <%= f.submit "ログイン" ,class: 'btn btn-sm btn-primary' %>
    </div>
  <% end %>
</div>

<p>Find me in app/views/admin/homes/<%= action_name %>.html.erb</p>