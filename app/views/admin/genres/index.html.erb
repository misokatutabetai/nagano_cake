<h1>admin/homes#<%= action_name %></h1>

<div class="d-flex align-items-center p-3">
  <span class="page-title">ジャンル一覧・追加</span>
</div>

<div class="col">
  <div class="mt-4 mx-auto">
    <%= form_with model: @genre, url: admin_genres_path, local: true, class: "mt-2 d-flex align-items-center" do |f| %>
      <%= f.label :name, "ジャンル名", class: "col-3 p-0" %>
      <%= f.text_field :name, placeholder: "ジャンル名", autocomplete: true, class: "col-6 p-0" %>
      <%= f.submit "新規登録", class: "ml-2 btn btn-sm btn-success" %>
    <% end %>
  </div>

  <div class="mt-4">
    <table class='table'>
      <thead>
        <tr>
          <th class="col-8">ジャンル</th>
          <th class="col-2"></th>
          <th class="col-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete,data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p>Find me in app/views/admin/homes/<%= action_name %>.html.erb</p>