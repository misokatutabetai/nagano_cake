<h1>admin/homes#<%= action_name %></h1>

<div class="d-flex align-items-center p-3">
  <span class="page-title">注文履歴一覧</span>
</div>

<div class="col">
  <table class='table'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <%# レコードごとにリンクを付ける場合はJSを使う %>
        <tr>
          <td><%= order.created_at.to_date %></td>
          <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
          <td>number</td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "詳細", admin_order_path(order.id), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%
=begin %>
  <%# kaminariを用いてページャを実装する %>
  <div class="mt-5 d-flex justify-content-center"><%= paginate post_images, theme: 'bootstrap-5' %></div>
<%
=end %>

<p>Find me in app/views/admin/homes/<%= action_name %>.html.erb</p>