<div class="d-flex align-items-center p-3">
  <span class="page-title">注文履歴一覧</span>
</div>

<div class="col">
  <table class='table'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.new_order.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
          <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3 d-flex justify-content-center"><%= paginate @orders %></div>
</div>

