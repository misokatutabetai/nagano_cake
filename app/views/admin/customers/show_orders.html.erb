<div class="d-flex align-items-center p-3">
  <span class="page-title"><%= @customer.last_name %> <%= @customer.first_name %>さんの注文履歴</span>
</div>

<div class="col">
  <table class='table'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customer_orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
          <td><%= order.order_details.sum(:amount)%></td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3 d-flex justify-content-center"><%= paginate @customer_orders %></div>
</div>

