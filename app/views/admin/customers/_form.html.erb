<%= form_with model: [:admin, customer], local: true do |f| %>
  <div class="field mt-5">
    <div>会員ID</div>
    <div class="col-8 p-0"><%= customer.id %></div>
  </div>
  <div class="field mt-2">
    <div>氏名</div>
    <div class="d-flex col-8 p-0">
      <%= f.text_field :last_name, autofocus: true, autocomplete: :off, class: "col-5 px-1" %>
      <%= f.text_field :first_name, class: "col-5 px-1 ml-1" %>
    </div>
  </div>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :last_name %>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :first_name %>

  <div class="field mt-2">
    <div>フリガナ</div>
    <div class="d-flex col-8 p-0">
      <%= f.text_field :last_name_kana, class: "col-5 px-1" %>
      <%= f.text_field :first_name_kana, class: "col-5 px-1 ml-1" %>
    </div>
  </div>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :last_name_kana %>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :first_name_kana %>

  <div class="field mt-2">
    <%= f.label :postal_code, "郵便番号" %>
    <div class="col-8 px-0">
      <%= f.text_field :postal_code, autocomplete: :off, class: "col-5 px-1" %>
    </div>
  </div>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :postal_code %>

  <div class="field mt-2">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autocomplete: :on, class: "col-8 px-1" %>
  </div>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :address %>

  <div class="field mt-2">
    <%= f.label :telephone_number, "電話番号" %>
    <div class="col-8 px-0">
      <%= f.text_field :telephone_number, class: "col-5 px-1" %>
    </div>
  </div>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :telephone_number %>

  <div class="field mt-2">
    <%= f.label :email, "メールアドレス" %>
    <div class="col-8 px-0">
      <%= f.text_field :email, autocomplete: :off, class: "col-10 px-1" %>
    </div>
  </div>
  <%= render 'admin/shared/error_message', object: f.object, attribute: :email %>

  <div class="field mt-2">
    <div>会員ステータス</div>

    <div class="row col-8 p-0">
      <div class="col p-0">
        <%= f.radio_button :is_active, :true, checked: customer.is_active %>
        <%= f.label :is_active, "有効", value: :true, class: "mr-3" %>
        <%= f.radio_button :is_active, :false, checked: !customer.is_active %>
        <%= f.label :is_active, "退会", value: :false %>
      </div>
    </div>
  </div>

  <div class="actions mt-5">
    <%= f.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>